		<script>
const videosPerPage = document.getElementById("videos_per_page");
const videosPerPageFooter = document.getElementById(
	"videos_per_page_footer",
);
const totalVideos = document.getElementById("total_videos");

var currentPage = 1;
var pageSize = 20;
var sortField = "id";

const pageQuery = new URLSearchParams(window.location.search).get("page");

if (pageQuery) {
	currentPage = parseInt(pageQuery);
}

const pageSizeQuery = new URLSearchParams(window.location.search).get("page_size");

if (pageSizeQuery) {
	pageSize = parseInt(pageSizeQuery);
}

const sortFieldQuery = new URLSearchParams(window.location.search).get("sort");

if (sortFieldQuery) {
	sortField = sortFieldQuery;
}

if (authToken) {
	getVideos(currentPage);
} else {
	gotoLogin();
}

async function getVideos(page = 1) {
	const videosURL = `v1/videos?sort=${sortField}&page_size=${pageSize}&page=${page}`;

	const response = await fetch(videosURL, {
		method: "GET",
		headers: getHeaders(),
	});

	if (response.status === 200) {
		const jsonData = await response.json();

		generateList(jsonData.videos);
		generatePagination(jsonData.metadata, jsonData.videos.length);
	} else {
		gotoLogin();
	}

	window.history.pushState({}, "", `admin/videos.html?sort=${sortField}&page_size=${pageSize}&page=${page}`);
}
async function generateList(videos) {
	const videosContainer = document.getElementById(
		"videos_container",
	);

	videosContainer.innerHTML = "";

	for (let i = 0; i < videos.length; i++) {
		const video = videos[i];

		const videoItem = document.querySelector(
			"#templates_container .videos_item",
		).cloneNode(true);

		videoItem.querySelector("[data-field=id]").innerHTML = formatInteger(video.id);
		videoItem.querySelector("[data-field=name]").innerHTML = video.name;
		const releaseDateDateObject = new Date(video.release_date);

		const releaseDateDateString = releaseDateDateObject.toLocaleDateString("en-US", {
			year: "numeric",
			month: "2-digit",
			day: "2-digit",
		});
		videoItem.querySelector("[data-field=release_date]").innerHTML = releaseDateDateString;
		videoItem.querySelector("[data-field=sequence]").innerHTML = video.sequence;

		videoItem.querySelector("a.edit_button").href = "admin/video.html?id=" + video.id;

		videoItem.querySelector("a.delete_button").addEventListener("click", async () => {
			if (confirm("Are you sure you want to delete this channel?")) {
				const response = await fetch("v1/videos/" + video.id, {
					method: "DELETE",
					headers: getHeaders(),
				});

				if (response.status === 200) {
					getVideos(currentPage);
				}
			}
		});

		/*custom_action_buttons*/

		videosContainer.appendChild(videoItem);
	}
}
async function generatePagination(metadata, itemsLength) {
	itemsLength = formatInteger(itemsLength);

	let showingTotal = formatInteger(metadata.page_size);

	if (itemsLength < metadata.page_size) {
		showingTotal = itemsLength;
	}

	videosPerPage.innerHTML = showingTotal;
	videosPerPageFooter.innerHTML = showingTotal;
	totalVideos.innerHTML = formatInteger(metadata.total_records);

	const paginationContainer = document.querySelector("#pagination_buttons");
	paginationContainer.innerHTML = "";

	const firstButton = document.getElementById("first_button");

	if (metadata.current_page <= metadata.first_page) {
		firstButton.disabled = true;
	} else {
		firstButton.removeAttribute("disabled");
	}

	firstButton.onclick = () => getVideos(metadata.first_page);

	for (let i = metadata.current_page - 2; i < metadata.current_page + 3; i++) {
		if (i < metadata.first_page || i > metadata.last_page) {
			continue;
		}

		const pageButton = document.querySelector("#templates_container .pagination_link").cloneNode(true);

		if (i === metadata.current_page) {
			pageButton.dataset.active = "true";
		}

		pageButton.innerHTML = i;
		paginationContainer.appendChild(pageButton);
		pageButton.onclick = () => getVideos(i);
	}

	const lastButton = document.getElementById("last_button");

	if (metadata.current_page >= metadata.last_page) {
		lastButton.disabled = true;
	} else {
		lastButton.removeAttribute("disabled");

	}
	lastButton.onclick = () => getVideos(metadata.last_page);
}

		</script>
